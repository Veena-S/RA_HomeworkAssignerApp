<html>
  <%- include('headerIncludes'); -%>
  <body>
    <%- include('navbar', {displayPage: 'userPage', userName: userData[dbConfig.colUserName], roles: [userData[dbConfig.colRole], userData[dbConfig.colAdmin]]}); -%>
    <div class="jumbotron cust-jumbotron justify-content-center">
      <p class="lead">
            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec ultricies
            mi sit amet mollis porta. Aliquam euismod sapien vitae facilisis
            convallis. Vivamus ut lorem sapien. Cras tristique ligula nec enim gravida
            vestibulum.
      </p>
    </div>

    <!--Display all the important info as one liners-->
    <div class="container  justify-content-center ">
      <!--for each user there will be a row-->
        <div class="row no-gutters bg-info position-relative ml-4 cust-border-round">
          <!--For adding homework details-->
          <div class="col-sm-8 position-static pt-sm-2"> <!--pb-3 pr-sm-5 pt-sm-5 mt-4-->

            <!--
              homeworkData,
              allSubjectsAndGrades,
              distinctSubjectsList,
              userData: request.userInfo,
              dbConfig: db_config,
            -->
            <form action="/homework/:id/edit?_method=PUT" method="POST" enctype=multipart/form-data>
              <h6><i><b><%=homeworkData[dbDescColNames.colTitle]%></b></i></h6>

              <!--Created On-->
              <div class="row form-row form-group ">
                <div class="col">
                   <label for="<%= dbConfig.colCreatedAt%>" class="col-form-label"><%= dbConfig.descCreatedAt%>:</label>
                   <input  type="text"  id="<%= dbConfig.colCreatedAt%>" class="form-control" name="<%= dbConfig.colCreatedAt%>" value="<%=homeworkData[dbConfig.colCreatedAt].toDateString()%>" readonly />
                </div>
              </div>

              <!--Last Updated on-->
              <% if(homeworkData[dbConfig.colEditedAt] !== undefined) {%> 
                <div class="row form-row form-group ">
                <div class="col">
                   <label for="<%= dbConfig.colEditedAt%>" class="col-form-label"><%= dbConfig.descEditedAt%>:</label>
                   <input  type="text"  id="<%= dbConfig.colEditedAt%>" class="form-control" name="<%= dbConfig.colEditedAt%>" value="<%=homeworkData[dbConfig.colEditedAt].toDateString()%>" readonly />
                </div>
              </div>
              <% } %> 

              <!--Display Grades & Subjects Selection Box, with already existing values as selected-->
              <% if(allSubjectsAndGrades.dataSubjectGrade !== undefined){ %> 
                <%- include('gradeSelectList', {dataSubjectGrade: allSubjectsAndGrades.dataSubjectGrade, displaySubjectCombo: true, distinctSubjectsList: distinctSubjectsList, existingData: homeworkData}) -%>
              <% } %> 

              <!--Status-->
              <%- include('statusList') -%> 

              <!--Title-->
              <div class="row form-row form-group ">
                <div class="col">
                   <label for="<%= dbConfig.colTitle%>" class="col-form-label"><%= dbConfig.descTitle%>:</label>
                   <input  type="text"  id="<%= dbConfig.colTitle%>" class="form-control" name="<%= dbConfig.colTitle%>" value="<%=homeworkData[dbConfig.colTitle]%>" />
                </div>
              </div>

              <!--Homework Description-->
              <div class="row form-row form-group ">
                <div class="col">
                   <label for="<%= dbConfig.colHwrkDesc%>" class="col-form-label"><%= dbConfig.descHwrkDesc%>:</label>
                   <textarea  type="text"  id="<%= dbConfig.colHwrkDesc%>" class="form-control" name="<%= dbConfig.colHwrkDesc%>"><%=homeworkData[dbConfig.colHwrkDesc]%></textarea>
                </div>
              </div>

              <!--FilePath-->
              <div class="row ">
                <div class="col">
                   <label for="old_<%=dbConfig.colFilePath%>" class="col-form-label"><%= dbConfig.descFilePath%>:</label>
                   <!-- <input  type="text"  id="<%#= dbConfig.colFilePath%>" class="form-control" name="<%#= dbConfig.colFilePath%>" value="<%#=homeworkData[dbConfig.colFilePath]%>" readonly /> -->
                   <a href="/<%=homeworkData[dbConfig.colFilePath]%>" id="old_<%= dbConfig.colFilePath%>" download="hw_<%=homeworkData[dbConfig.colFilePath]%>"><%=homeworkData[dbConfig.colFilePath]%></a>
                </div>
              </div>

              <div class="row form-row form-group ">
                <label for="<%= dbConfig.colFilePath%>" class="col-form-label "><%= dbConfig.descFilePath%>:</label>
                <input  type="file"  id="<%= dbConfig.colFilePath%>" name="<%= dbConfig.colFilePath%>"/>
            </div>

            </form>

          </div>
          <!--To add the edit and delete buttons-->
          <div class="col-sm-2 card card-body bg-info border-0">
            <ul>
              <li class="list-inline-item bg-transparent border-0">
              <!-- <button class="btn btn-sm rounded-0 btn-over-stretched" type="button" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-edit fa-lg"></i></button> -->

               <a href="/homework/<%=homeworkData[dbDescColNames.colID]%>/edit" class="btn btn-sm rounded-0 btn-over-stretched" role="button" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-edit fa-lg"></i></a>
              </li>
              <li class="list-inline-item bg-transparent border-0">
                <!-- <button class="btn btn-sm rounded-0 btn-over-stretched" type="button" data-toggle="tooltip" data-placement="top" title="Delete"><i class="fa fa-trash fa-lg"></i>  </button> -->
                <a href="/homework/<%=homeworkData[dbDescColNames.colID]%>/delete" class="btn btn-sm rounded-0 btn-over-stretched" role="button" data-toggle="tooltip" data-placement="top" title="Delete"><i class="fa fa-trash fa-lg"></i></a>
              </li>
            </ul>
          </div>
        </div>
    </div>

    
    <%- include('footerIncludes'); -%>
  </body>
</html>

