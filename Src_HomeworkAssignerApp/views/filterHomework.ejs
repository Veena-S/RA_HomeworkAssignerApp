<form action="/list-homeworks" method="GET">
<%if(distinctGradeList.length !== 0 ){%>
  <div class="row form-row form-group">
  <label class="col col-form-label">Grades:</label>
  <div class="col ">
    <!--For each role create a check box-->
    <% distinctGradeList.forEach((gradeRow) => { %>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" name="grade" value="<%=gradeRow.grade%>">
        <label class="form-check-label" ><%=gradeRow.grade%></label>
      </div>   
    <% }); %>
  </div>
</div>
<% } %> 

<%if(distinctSubjectsList.length !== 0 ){%>
<div class="row form-row form-group">
  <label class="col col-form-label">Subjects:</label>
  <div class="col ">
    <!--For each role create a check box-->
    <% distinctSubjectsList.forEach((subjectRow) => { %>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" name="subject_name" value="<%=subjectRow.subject_name%>">
        <label class="form-check-label" ><%=subjectRow.subject_name%></label>
      </div>   
    <% }); %>
  </div>
  
</div>
<% } %> 

<input class="btn btn-sm btn-outline-secondary" type="submit" value="Apply">
</form>

