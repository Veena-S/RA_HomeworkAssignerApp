
<html>
  <%- include('headerIncludes'); -%>
  <body>
    <%- include('navbar', {displayPage: 'userPage', userName: requesterInfo[dbConfig.colUserName], roles: [requesterInfo[dbConfig.colRole], requesterInfo[dbConfig.colAdmin]]}); -%>
    
