    <!--
  answerDataList: resultAnswerList,
          homeworkID: request.params.hwID,
          requesterInfo: request.userInfo,
          dbConfig,
-->

    <!--Display all the important info as one liners-->
    <div class="container  justify-content-center ">
      <% if(answerDataList.length === 0) { %> 
        <div class="alert alert-info col-sm-4 offset-sm-4" role="alert">
            No answers for this homework yet!
        </div>
      <% } %> 
      <!--for each user there will be a row-->
      <% answerDataList.forEach((singleAnswer, index) => {%>
        <div class="row no-gutters bg-info  ml-4 cust-border-round">
          <!--For adding image-->
          <div class="col-sm-2 mb-sm-0 p-sm-2">
            <h6></h6>
          </div>
          <!--For adding answer details-->
          <div class="col-sm-8 position-relative  pt-sm-2"> <!--pb-3 pr-sm-5 pt-sm-5 mt-4-->
            <ul class="list-group">
              <% if(singleAnswer[dbConfig.colSubmittedAt] !== undefined && singleAnswer[dbConfig.colSubmittedAt] != null && singleAnswer[dbConfig.colSubmittedAt] !== '' ) {%> 
                <li class="list-group-item list-group-item-info border-0 py-1 custom-overflow"><i><b><%=dbConfig.descSubmittedAt%>: </b></i><%=singleAnswer[dbConfig.colSubmittedAt].toUTCString()%></li>
              <% } %> 
              
              <li class="list-group-item list-group-item-info border-0 py-1 custom-overflow"><i><b><%=dbConfig.descDesc%>: </b></i><%=singleAnswer[dbConfig.colDesc]%></li>
              <% if(singleAnswer[dbConfig.colUpdatedAt] !== undefined) {%> 
                <% if(singleAnswer[dbConfig.colUpdatedAt] !== undefined && singleAnswer[dbConfig.colUpdatedAt] != null && singleAnswer[dbConfig.colUpdatedAt] !== '' ) {%> 
                  <li class="list-group-item list-group-item-info border-0 py-1"><i><b><%=dbConfig.descUpdatedAt%>: </b></i><%=singleAnswer[dbConfig.colUpdatedAt].toUTCString()%></li>
                <% } %> 
              <% } %> 
            </ul>
            <a href="/answer/<%=homeworkID%>/<%=singleAnswer[dbConfig.colID]%>" class="stretched-link" ></a>
          </div>
          <!--To add the edit and delete buttons-->
          <div class="col-sm-2 card card-body bg-info border-0">
            <ul>
              <li class="list-inline-item bg-transparent border-0">
               <a href="/answer/<%=homeworkID%>/<%=singleAnswer[dbConfig.colID]%>/edit" class="btn btn-sm rounded-0 btn-over-stretched" role="button" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-edit fa-lg"></i> Edit</a>
              </li>
              <li class="list-inline-item bg-transparent border-0">
                <form
                  class="btn-form mr-1"
                  action="/answer/<%=homeworkID%>/<%=singleAnswer[dbConfig.colID]%>/delete?_method=DELETE"
                  method="POST"
                >
                  <button class="btn btn-sm rounded-0 btn-over-stretched" data-placement="top"><i class="fa fa-trash fa-lg"></i>Delete</button>
                </form>
              </li>
            </ul>
          </div>
        </div>
      <%}); %> 
    </div>

    
    <%- include('footerIncludes'); -%>
  </body>
</html>

